# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_API_KEY=your_twilio_api_key_here
TWILIO_API_SECRET=your_twilio_api_secret_here

# Server Configuration
PORT=3001
FLASK_ENV=development
FLASK_DEBUG=True

# Application Settings
APP_NAME=SmartTV Backend
ENVIRONMENT=development

# Discord Webhook for Logging (Optional)
# Get webhook URL from Discord server settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Optional: Custom Twilio Region
TWILIO_REGION=us1

# ProxyFix Configuration (for deployment behind proxies/load balancers)
# Adjust these values based on your proxy setup:
# PROXY_FIX_X_FOR=1    # Number of proxies setting X-Forwarded-For
# PROXY_FIX_X_PROTO=1  # Number of proxies setting X-Forwarded-Proto
# PROXY_FIX_X_HOST=1   # Number of proxies setting X-Forwarded-Host
# PROXY_FIX_X_PREFIX=1 # Number of proxies setting X-Forwarded-Prefix